<datamodel-sqltable xmlns="http://www.efaps.org/xsd"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">

    <uuid>5630f6a5-2238-4bc4-9d73-632bf98537bb</uuid>
    <file-application>eFaps-Kernel</file-application>
    <file-revision>$Rev: 3936 $</file-revision>

    <!-- Access Type object -->
    <definition>
        <version-expression>(version==2) || (version==latest)</version-expression>
        <name>Admin_Access_Access4ObjectSQLTable</name>
        <database>
            <table-name>T_ACCESS4OBJ</table-name>
            <!-- columns -->
            <column name="TYPEID"   type="INTEGER"  not-null="true" />
            <column name="OBJID"    type="INTEGER"  not-null="true" />
            <column name="PERSID"   type="INTEGER"  not-null="true" />
            <column name="ACCSETID" type="INTEGER"  not-null="true" />
            <column name="CREATOR"  type="INTEGER"  not-null="true" />
            <column name="CREATED"  type="DATETIME" not-null="true" />
            <column name="MODIFIER" type="INTEGER"  not-null="true" />
            <column name="MODIFIED" type="DATETIME" not-null="true" />
            <!-- constraints -->
            <unique name="T_ACCESS4OBJ_UK" columns="TYPEID,OBJID,PERSID,ACCSETID" />
            <!-- foreign keys -->
            <foreign name="T_ACCESS4OBJ_FK_CRTR"        key="CREATOR"   reference="T_USERPERSON(ID)" />
            <foreign name="T_ACCESS4OBJ_FK_MDFR"        key="MODIFIER"  reference="T_USERPERSON(ID)" />
            <foreign name="T_ACCESS4OBJ_FK_PERSID"      key="PERSID"    reference="T_USERABSTRACT(ID)" />
            <foreign name="T_ACCESS4OBJ_FK_ACCSETID"    key="ACCSETID"  reference="T_ACCESSSET(ID)" />
        </database>
    </definition>

    <!-- create base data model -->
    <definition>
        <version-expression>(version==1)</version-expression>
        <database>
            <table-name>T_ACCESS4OBJ</table-name>
            <!-- columns -->
            <column name="TYPEID"   type="INTEGER"  not-null="true" />
            <column name="OBJID"    type="INTEGER"  not-null="true" />
            <column name="PERSID"   type="INTEGER"  not-null="true" />
            <column name="ACCSETID" type="INTEGER"  not-null="true" />
            <column name="CREATOR"  type="INTEGER"  not-null="true" />
            <column name="CREATED"  type="DATETIME" not-null="true" />
            <column name="MODIFIER" type="INTEGER"  not-null="true" />
            <column name="MODIFIED" type="DATETIME" not-null="true" />
            <!-- constraints -->
            <unique name="T_ACCESS4OBJ_UK" columns="TYPEID,OBJID,PERSID,ACCSETID" />
        </database>
    </definition>
</datamodel-sqltable>

